{
  "family": "alphavox",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "alphavox",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/alphavox:IMAGE_TAG",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "FLASK_APP",
          "value": "main.py"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/alphavox/DATABASE_URL"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/alphavox/OPENAI_API_KEY"
        },
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/alphavox/ANTHROPIC_API_KEY"
        },
        {
          "name": "SESSION_SECRET",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/alphavox/SESSION_SECRET"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/alphavox",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "cpu": 256,
      "memory": 512,
      "memoryReservation": 256
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "tags": [
    {
      "key": "Name",
      "value": "AlphaVox"
    },
    {
      "key": "Environment",
      "value": "Production"
    },
    {
      "key": "Project",
      "value": "AlphaVox"
    }
  ]
}
